@{
    if (ViewData.TryGetValue("ParentLayout", out var parentLayout) && parentLayout !=  null)
    {
        Layout = parentLayout.ToString();
    }
    else
    {
        Layout = "/Pages/Shared/_Layout.cshtml";
    }

    ViewData["Title"] = "My Account";
}

<div class="container py-5">
    <div class="card shadow border-0">
        <div class="card-header bg-primary bg-gradient text-white py-3 d-flex justify-content-between align-items-center">
            <h3 class="mb-0">👤 Manage Your Account</h3>
            <small class="text-white-50">Customize your profile and preferences</small>
        </div>

        <div class="card-body p-4">
            <div class="row g-4">
                <div class="col-12 col-md-3">
                    <div class="list-group shadow-sm">
                        <partial name="_ManageNav" />
                    </div>
                </div>

                <div class="col-12 col-md-9">
                    <div class="border rounded-3 shadow-sm p-4 bg-light">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>

        <div class="card-footer text-center text-muted py-3">
            <small>&copy; @DateTime.Now.Year DentalApp — All rights reserved</small>
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
}
