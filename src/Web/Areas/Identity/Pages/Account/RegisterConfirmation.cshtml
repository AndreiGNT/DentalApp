@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Registration Confirmation";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow border-0">
                <div class="card-header bg-info text-white text-center py-3">
                    <h3>@ViewData["Title"]</h3>
                </div>
                <div class="card-body p-4 text-center">
                    @if (Model.DisplayConfirmAccountLink)
                    {
                        <p class="mb-4">
                            The application does not currently have a real email sender configured.
                            See <a href="https://aka.ms/aspaccountconf" target="_blank">this guide</a> to enable email confirmation.
                        </p>
                        <p>
                            <strong>Development only:</strong><br />
                            <a id="confirm-link" class="btn btn-success mt-2" href="@Model.EmailConfirmationUrl">Click here to confirm your account</a>
                        </p>
                    }
                    else
                    {
                        <p class="alert alert-success">
                            Please check your email (<strong>@Model.Email</strong>) to confirm your account.
                        </p>
                    }

                    <a class="btn btn-secondary mt-4" href="/">Return to Home</a>
                </div>
            </div>
        </div>
    </div>
</div>
