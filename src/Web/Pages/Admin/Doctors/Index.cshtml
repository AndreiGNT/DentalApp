@page
@model DentalApp.Web.Pages.Admin.Doctors.IndexModel
@{
    ViewData["Title"] = "Doctors Management";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white mb-0">
                    Doctors List
                </h3>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-page="Create" class="btn btn-info text-white">
                    <i class="bi bi-plus-circle"></i> New Doctor
                </a>
            </div>
        </div>

        @if (!Model.Doctors.Any())
        {
            <div class="alert alert-info">No doctors found.</div>
        }
        else
        {
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Full Name</th>
                        <th>Procedures</th>
                        <th style="width: 220px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doc in Model.Doctors)
                    {
                        <tr>
                            <td>@doc.FullName</td>
                            <td>
                                @if (doc.DoctorProcedures != null && doc.DoctorProcedures.Any())
                                {
                                    <ul class="list-unstyled mb-0">
                                        @foreach (var dp in doc.DoctorProcedures)
                                        {
                                            if (dp.Procedure != null)
                                            {
                                                <li>@dp.Procedure.ProcedureName</li>
                                            }
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <span class="text-muted fst-italic">No assigned procedures</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group w-100" role="group">
                                    <a asp-page="Update" asp-route-id="@doc.Id" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@doc.Id"
                                          onsubmit="return confirm('Are you sure you want to delete this doctor?');"
                                          style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
