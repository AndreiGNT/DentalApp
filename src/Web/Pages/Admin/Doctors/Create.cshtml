@page
@model DentalApp.Web.Pages.Admin.Doctors.CreateModel
@{
    ViewData["Title"] = "Create Doctor";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient py-3">
        <h3 class="text-white mb-0 text-center">Create Doctor</h3>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <div class="mb-3">
                <label asp-for="FullName" class="form-label fw-bold">Full Name</label>
                <input asp-for="FullName" class="form-control" placeholder="Enter doctor's name" />
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold">Select Procedures</label>
                @if (Model.AvailableProcedures.Any())
                {
                    <div class="border rounded p-2">
                        @foreach (var proc in Model.AvailableProcedures)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="SelectedProcedures" value="@proc.Id" id="proc_@proc.Id" />
                                <label class="form-check-label" for="proc_@proc.Id">@proc.ProcedureName</label>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <p class="text-muted fst-italic">No procedures available.</p>
                }
            </div>

            <div class="d-flex justify-content-between mt-4">
                <a href="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left"></i> Back to list
                </a>
                <button type="submit" class="btn btn-info text-white">
                    <i class="bi bi-save"></i> Save
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const checkboxes = document.querySelectorAll('input[name="SelectedProcedures"]');
            checkboxes.forEach(chk => {
                chk.addEventListener('change', () => {
                    const checkedCount = document.querySelectorAll('input[name="SelectedProcedures"]:checked').length;
                    if (checkedCount > 3) {
                        chk.checked = false;
                        alert("You can select a maximum of 3 procedures per doctor.");
                    }
                });
            });
        });
    </script>
}
