@page
@model DentalApp.Web.Pages.Admin.Procedures.IndexModel
@{
    ViewData["Title"] = "Procedures Management";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white mb-0">
                    Procedures List
                </h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a href="Create" class="btn btn-info text-white">
                    <i class="bi bi-plus-circle"></i> New Procedure
                </a>
            </div>
        </div>

        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success">@TempData["SuccessMessage"]</div>
        }

        @if (!Model.Procedures.Any())
        {
            <div class="alert alert-info">No procedures found.</div>
        }
        else
        {
            <table class="table table-bordered table-striped align-middle">
                <thead class="table-light">
                    <tr>
                        <th>Procedure Name</th>
                        <th>Duration</th>
                        <th>Price (MDL)</th>
                        <th style="width: 220px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Procedures)
                    {
                        <tr>
                            <td>@p.ProcedureName</td>
                            <td>@p.Duration</td>
                            <td>@p.Price</td>
                            <td>
                                <div class="btn-group w-100" role="group">
                                    <a asp-page="Update" asp-route-id="@p.Id" class="btn btn-outline-info btn-sm">
                                        <i class="bi bi-pencil-square"></i> Edit
                                    </a>
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@p.Id"
                                          onsubmit="return confirm('Are you sure you want to delete this procedure?');"
                                          style="display:inline;">
                                        <button type="submit" class="btn btn-outline-danger btn-sm">
                                            <i class="bi bi-trash"></i> Delete
                                        </button>
                                    </form>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
