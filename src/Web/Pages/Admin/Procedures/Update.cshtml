@page "{id:int}"
@model DentalApp.Web.Pages.Admin.Procedures.UpdateModel
@{
    ViewData["Title"] = "Edit Procedure";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white mb-0">
                    Edit Procedure
                </h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="ProcedureName" class="form-label"></label>
                <input asp-for="ProcedureName" class="form-control" />
                <span asp-validation-for="ProcedureName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duration" class="form-label"></label>
                <select asp-for="Duration" asp-items="Model.DurationOptions" class="form-select">
                    <option value="">-- select duration --</option>
                </select>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
            <a asp-page="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
