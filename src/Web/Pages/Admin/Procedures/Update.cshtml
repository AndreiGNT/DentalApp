@page "{id:int}"
@model DentalApp.Web.Pages.Admin.Procedures.UpdateModel
@{
    ViewData["Title"] = "Edit Procedure";
}

<h2>Edit Procedure</h2>

<form method="post">
    <input type="hidden" asp-for="Form.Id" />

    <div class="mb-3">
        <label asp-for="Form.ProcedureName" class="form-label"></label>
        <input asp-for="Form.ProcedureName" class="form-control" />
        <span asp-validation-for="Form.ProcedureName" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Duration" class="form-label"></label>
        <input asp-for="Form.Duration" class="form-control" type="time" step="60" />
        <span asp-validation-for="Form.Duration" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Form.Price" class="form-label"></label>
        <input asp-for="Form.Price" class="form-control" />
        <span asp-validation-for="Form.Price" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
    <a asp-page="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
