@page
@using DentalApp.Web.Pages.Admin.Procedures
@model DentalApp.Web.Pages.Admin.Procedures.CreateModel
@{
    ViewData["Title"] = "Add Procedure";
}

<div class="card shadow border-0 mt-4">
    <div class="card-header bg-info bg-gradient py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h3 class="text-white mb-0">
                    New Procedure
                </h3>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <form method="post">
            <div class="mb-3">
                <label asp-for="ProcedureName" class="form-label">ProcedureName</label>
                <input asp-for="ProcedureName" class="form-control" />
                <span asp-validation-for="ProcedureName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Duration" class="form-label">Duration</label>
                <select asp-for="Duration" asp-items="Model.DurationOptions" class="form-select">
                    <option value="">-- select duration --</option>
                </select>
                <span asp-validation-for="Duration" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Price" class="form-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Save</
            <a href="Index" class="btn btn-secondary">Cancel</a>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
